<UserControl
    x:Class="Woohoo.ChecksumMatcher.WinUI.Views.DatabaseFileDetailControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ct="using:CommunityToolkit.WinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lclviewmodels="using:Woohoo.ChecksumMatcher.WinUI.ViewModels"
    xmlns:lclviews="using:Woohoo.ChecksumMatcher.WinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <SelectorBar x:Name="SelectorBar1" Grid.Row="0">
            <SelectorBarItem
                x:Name="SelectorBarItemInfo"
                x:Uid="DatabaseFileDetails_SelectorBarItemInfo"
                Icon="{ct:FontIcon Glyph=&#xE946;}" />
            <SelectorBarItem
                x:Name="SelectorBarItemGames"
                x:Uid="DatabaseFileDetails_SelectorBarItemGames"
                Icon="{ct:FontIcon Glyph=&#xE8FD;}"
                IsSelected="True" />
            <SelectorBarItem
                x:Name="SelectorBarItemScan"
                x:Uid="DatabaseFileDetails_SelectorBarItemScan"
                Icon="{ct:FontIcon Glyph=&#xF28B;}" />
            <SelectorBarItem
                x:Name="SelectorBarItemScanSettings"
                x:Uid="DatabaseFileDetails_SelectorBarItemScanSettings"
                Icon="{ct:FontIcon Glyph=&#xE8F7;}" />
            <SelectorBarItem
                x:Name="SelectorBarItemRebuild"
                x:Uid="DatabaseFileDetails_SelectorBarItemRebuild"
                Icon="{ct:FontIcon Glyph=&#xEE6F;}" />
            <SelectorBarItem
                x:Name="SelectorBarItemRebuildSettings"
                x:Uid="DatabaseFileDetails_SelectorBarItemRebuildSettings"
                Icon="{ct:FontIcon Glyph=&#xE8F7;}" />
        </SelectorBar>
        <lclviews:DatabaseFileInfoControl
            Grid.Row="1"
            ViewModel="{x:Bind Database, Mode=OneWay}"
            Visibility="{Binding ElementName=SelectorBar1, Path=SelectedItem.Name, Mode=OneWay, Converter={StaticResource EqualsToVisibilityConverter}, ConverterParameter=SelectorBarItemInfo}" />
        <lclviews:DatabaseFileGamesControl
            Grid.Row="1"
            ViewModel="{x:Bind Database, Mode=OneWay}"
            Visibility="{Binding ElementName=SelectorBar1, Path=SelectedItem.Name, Mode=OneWay, Converter={StaticResource EqualsToVisibilityConverter}, ConverterParameter=SelectorBarItemGames}" />
        <lclviews:DatabaseFileScanControl
            Grid.Row="1"
            ViewModel="{x:Bind Database, Mode=OneWay}"
            Visibility="{Binding ElementName=SelectorBar1, Path=SelectedItem.Name, Mode=OneWay, Converter={StaticResource EqualsToVisibilityConverter}, ConverterParameter=SelectorBarItemScan}" />
        <lclviews:DatabaseFileScanSettingsControl
            Grid.Row="1"
            ViewModel="{x:Bind Database, Mode=OneWay}"
            Visibility="{Binding ElementName=SelectorBar1, Path=SelectedItem.Name, Mode=OneWay, Converter={StaticResource EqualsToVisibilityConverter}, ConverterParameter=SelectorBarItemScanSettings}" />
        <lclviews:DatabaseFileRebuildControl
            Grid.Row="1"
            ViewModel="{x:Bind Database, Mode=OneWay}"
            Visibility="{Binding ElementName=SelectorBar1, Path=SelectedItem.Name, Mode=OneWay, Converter={StaticResource EqualsToVisibilityConverter}, ConverterParameter=SelectorBarItemRebuild}" />
        <lclviews:DatabaseFileRebuildSettingsControl
            Grid.Row="1"
            ViewModel="{x:Bind Database, Mode=OneWay}"
            Visibility="{Binding ElementName=SelectorBar1, Path=SelectedItem.Name, Mode=OneWay, Converter={StaticResource EqualsToVisibilityConverter}, ConverterParameter=SelectorBarItemRebuildSettings}" />
    </Grid>

</UserControl>
