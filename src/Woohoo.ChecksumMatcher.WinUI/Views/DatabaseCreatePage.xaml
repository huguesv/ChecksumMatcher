<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Woohoo.ChecksumMatcher.WinUI.Views.DatabaseCreatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lclviewmodels="using:Woohoo.ChecksumMatcher.WinUI.ViewModels"
    xmlns:lclviews="using:Woohoo.ChecksumMatcher.WinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    NavigationCacheMode="Required"
    mc:Ignorable="d">

    <ScrollViewer x:Name="ContentArea" Margin="0,0,-50,0">
        <StackPanel Margin="0,0,50,20">

            <TextBlock x:Name="CreateDatabasePage_SourceFolder" x:Uid="CreateDatabasePage_SourceFolder" />
            <Grid Margin="{StaticResource SmallTopMargin}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox
                    Grid.Column="0"
                    MinWidth="{StaticResource PathTextBoxDefaultMinWidth}"
                    HorizontalAlignment="Left"
                    AutomationProperties.LabeledBy="{Binding ElementName=CreateDatabasePage_SourceFolder}"
                    IsEnabled="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"
                    Text="{x:Bind ViewModel.SourceFolder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Button
                    x:Uid="CreateDatabasePage_BrowseSourceFolderButton"
                    Grid.Column="1"
                    MinWidth="{StaticResource SmallButtonDefaultMinWidth}"
                    Margin="{StaticResource SmallLeftMargin}"
                    Command="{x:Bind ViewModel.BrowseSourceFolderCommand, Mode=OneWay}"
                    IsEnabled="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}" />
            </Grid>

            <TextBlock
                x:Name="CreateDatabasePage_DatabaseDestinationFile"
                x:Uid="CreateDatabasePage_DatabaseDestinationFile"
                Margin="{StaticResource MediumTopMargin}" />
            <Grid Margin="{StaticResource SmallTopMargin}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox
                    Grid.Column="0"
                    MinWidth="{StaticResource PathTextBoxDefaultMinWidth}"
                    HorizontalAlignment="Left"
                    AutomationProperties.LabeledBy="{Binding ElementName=CreateDatabasePage_DatabaseDestinationFile}"
                    IsEnabled="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"
                    Text="{x:Bind ViewModel.DatabaseFilePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Button
                    x:Uid="CreateDatabasePage_BrowseDestinationFileButton"
                    Grid.Column="1"
                    MinWidth="{StaticResource SmallButtonDefaultMinWidth}"
                    Margin="{StaticResource SmallLeftMargin}"
                    Command="{x:Bind ViewModel.BrowseDatabaseFileCommand, Mode=OneWay}"
                    IsEnabled="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}" />
            </Grid>

            <TextBlock
                x:Name="CreateDatabasePage_Name"
                x:Uid="CreateDatabasePage_Name"
                Margin="{StaticResource MediumTopMargin}" />
            <TextBox
                MinWidth="{StaticResource TextBoxDefaultMinWidth}"
                Margin="{StaticResource SmallTopMargin}"
                HorizontalAlignment="Left"
                AutomationProperties.LabeledBy="{Binding ElementName=CreateDatabasePage_Name}"
                IsEnabled="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"
                Text="{x:Bind ViewModel.DatabaseName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock
                x:Name="CreateDatabasePage_Author"
                x:Uid="CreateDatabasePage_Author"
                Margin="{StaticResource MediumTopMargin}" />
            <TextBox
                MinWidth="{StaticResource TextBoxDefaultMinWidth}"
                Margin="{StaticResource SmallTopMargin}"
                HorizontalAlignment="Left"
                AutomationProperties.LabeledBy="{Binding ElementName=CreateDatabasePage_Author}"
                IsEnabled="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"
                Text="{x:Bind ViewModel.DatabaseAuthor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock
                x:Name="CreateDatabasePage_Version"
                x:Uid="CreateDatabasePage_Version"
                Margin="{StaticResource MediumTopMargin}" />
            <TextBox
                x:Name="VersionTextBox"
                MinWidth="{StaticResource TextBoxDefaultMinWidth}"
                Margin="{StaticResource SmallTopMargin}"
                HorizontalAlignment="Left"
                AutomationProperties.LabeledBy="{Binding ElementName=CreateDatabasePage_Version}"
                IsEnabled="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"
                Text="{x:Bind ViewModel.DatabaseVersion, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock
                x:Name="CreateDatabasePage_Url"
                x:Uid="CreateDatabasePage_Url"
                Margin="{StaticResource MediumTopMargin}" />
            <TextBox
                MinWidth="{StaticResource TextBoxDefaultMinWidth}"
                Margin="{StaticResource SmallTopMargin}"
                HorizontalAlignment="Left"
                AutomationProperties.LabeledBy="{Binding ElementName=CreateDatabasePage_Url}"
                IsEnabled="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"
                Text="{x:Bind ViewModel.DatabaseUrl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <StackPanel Margin="{StaticResource LargeTopMargin}" Orientation="Horizontal">
                <Button
                    x:Uid="CreateDatabasePage_CreateButton"
                    MinWidth="{StaticResource ButtonDefaultMinWidth}"
                    Command="{x:Bind ViewModel.CreateDatabaseCommand, Mode=OneWay}" />

                <Button
                    x:Uid="CreateDatabasePage_CancelButton"
                    MinWidth="{StaticResource ButtonDefaultMinWidth}"
                    Margin="{StaticResource SmallLeftMargin}"
                    Command="{x:Bind ViewModel.CancelCommand, Mode=OneWay}" />
            </StackPanel>

            <TextBlock
                Margin="{StaticResource LargeTopMargin}"
                VerticalAlignment="Center"
                AutomationProperties.LiveSetting="Assertive"
                Foreground="{x:Bind ViewModel.Status.Severity, Mode=OneWay, Converter={StaticResource StatusSeverityToBrushConverter}}"
                Text="{x:Bind ViewModel.Status.Text, Mode=OneWay}"
                TextWrapping="Wrap"
                Visibility="{x:Bind ViewModel.Status.Severity, Mode=OneWay, Converter={StaticResource StatusSeverityToVisibilityConverter}}" />

        </StackPanel>
    </ScrollViewer>
</Page>
