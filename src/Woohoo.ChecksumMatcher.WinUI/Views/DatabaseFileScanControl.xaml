<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Woohoo.ChecksumMatcher.WinUI.Views.DatabaseFileScanControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ct="using:CommunityToolkit.WinUI"
    xmlns:ctcontrols="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lclviewmodels="using:Woohoo.ChecksumMatcher.WinUI.ViewModels"
    xmlns:lclviews="using:Woohoo.ChecksumMatcher.WinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="RootControlElement"
    mc:Ignorable="d">

    <Grid Margin="0,12,0,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                    x:Uid="ScanPage_ScanButton"
                    Grid.Column="0"
                    MinWidth="{StaticResource ButtonDefaultMinWidth}"
                    Command="{x:Bind ViewModel.ScanCommand, Mode=OneWay}" />
                <Button
                    x:Uid="ScanPage_CancelButton"
                    Grid.Column="1"
                    MinWidth="{StaticResource ButtonDefaultMinWidth}"
                    Margin="{StaticResource SmallLeftMargin}"
                    Command="{x:Bind ViewModel.CancelScanCommand, Mode=OneWay}" />
                <Button
                    x:Uid="ScanPage_ClearResultsButton"
                    Grid.Column="2"
                    MinWidth="{StaticResource ButtonDefaultMinWidth}"
                    Margin="{StaticResource SmallLeftMargin}"
                    Command="{x:Bind ViewModel.ClearScanResultsCommand, Mode=OneWay}" />
                <ProgressBar
                    Grid.Column="3"
                    Margin="{StaticResource SmallLeftMargin}"
                    HorizontalAlignment="Stretch"
                    IsIndeterminate="True"
                    Visibility="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
            </Grid>
            <TextBlock
                Margin="{StaticResource SmallTopMargin}"
                VerticalAlignment="Center"
                AutomationProperties.LiveSetting="Assertive"
                Foreground="{x:Bind ViewModel.ScanStatus.Severity, Mode=OneWay, Converter={StaticResource StatusSeverityToBrushConverter}}"
                Text="{x:Bind ViewModel.ScanStatus.Text, Mode=OneWay}"
                TextWrapping="Wrap"
                Visibility="{x:Bind ViewModel.ScanStatus.Severity, Mode=OneWay, Converter={StaticResource StatusSeverityToVisibilityConverter}}" />
        </StackPanel>

        <SelectorBar
            x:Name="ScanResultSelectorBar"
            Grid.Row="1"
            Margin="{StaticResource SmallTopBottomMargin}">
            <SelectorBarItem
                x:Name="ScanPage_SelectorBarItemMatched"
                Icon="{ct:FontIcon Glyph=&#xE930;}"
                IsSelected="True"
                Text="{x:Bind ViewModel.ScanMatchedFilesLabel, Mode=OneWay}" />
            <SelectorBarItem
                x:Name="ScanPage_SelectorBarItemMissing"
                Icon="{ct:FontIcon Glyph=&#xEA39;}"
                Text="{x:Bind ViewModel.ScanMissingLabel, Mode=OneWay}" />
            <SelectorBarItem
                x:Name="ScanPage_SelectorBarItemIncorrectName"
                Icon="{ct:FontIcon Glyph=&#xE8AC;}"
                Text="{x:Bind ViewModel.ScanIncorrectNameFilesLabel, Mode=OneWay}" />
            <SelectorBarItem
                x:Name="ScanPage_SelectorBarItemUnused"
                Icon="{ct:FontIcon Glyph=&#xE9CE;}"
                Text="{x:Bind ViewModel.ScanUnusedFilesLabel, Mode=OneWay}" />
        </SelectorBar>

        <ListView
            Grid.Row="2"
            Margin="{StaticResource SmallTopMargin}"
            Padding="8"
            BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{ThemeResource ControlCornerRadius}"
            ItemsSource="{x:Bind ViewModel.ScanSortedMatchedFiles, Mode=OneWay}"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.HorizontalScrollMode="Auto"
            Visibility="{Binding ElementName=ScanResultSelectorBar, Path=SelectedItem.Name, Mode=OneWay, Converter={StaticResource EqualsToVisibilityConverter}, ConverterParameter=ScanPage_SelectorBarItemMatched}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="lclviewmodels:DatabaseScanResultActualViewModel">
                    <Grid>
                        <TextBlock Margin="{StaticResource XSmallTopBottomMargin}" Text="{x:Bind ActualDisplayName}" />
                        <Grid.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem
                                    x:Uid="DatabaseFileScan_MatchedOpenInExplorerMenuItem"
                                    Command="{Binding ElementName=RootControlElement, Path=ViewModel.OpenScanActualInExplorerCommand, Mode=OneWay}"
                                    CommandParameter="{x:Bind}" />
                                <MenuFlyoutSubItem x:Uid="DatabaseFileScan_MatchedCopyToClipboardMenuItem">
                                    <MenuFlyoutItem
                                        x:Uid="DatabaseFileScan_MatchedCopyNameMenuItem"
                                        Command="{Binding ElementName=RootControlElement, Path=ViewModel.CopyScanMatchedCommand, Mode=OneWay}"
                                        CommandParameter="{x:Bind}" />
                                    <MenuFlyoutSeparator />
                                    <MenuFlyoutItem x:Uid="DatabaseFileScan_MatchedCopyAllNamesMenuItem" Command="{Binding ElementName=RootControlElement, Path=ViewModel.CopyAllScanMatchedCommand, Mode=OneWay}" />
                                </MenuFlyoutSubItem>
                            </MenuFlyout>
                        </Grid.ContextFlyout>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ListView
            Grid.Row="2"
            Margin="{StaticResource SmallTopMargin}"
            Padding="8"
            BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{ThemeResource ControlCornerRadius}"
            ItemsSource="{x:Bind ViewModel.ScanSortedMissingFiles, Mode=OneWay}"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.HorizontalScrollMode="Auto"
            Visibility="{Binding ElementName=ScanResultSelectorBar, Path=SelectedItem.Name, Mode=OneWay, Converter={StaticResource EqualsToVisibilityConverter}, ConverterParameter=ScanPage_SelectorBarItemMissing}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="lclviewmodels:DatabaseScanResultExpectedViewModel">
                    <Grid>
                        <TextBlock Margin="{StaticResource XSmallTopBottomMargin}" Text="{x:Bind ExpectedDisplayName}" />
                        <Grid.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutSubItem x:Uid="DatabaseFileScan_MissingCopyToClipboardMenuItem">
                                    <MenuFlyoutItem
                                        x:Uid="DatabaseFileScan_MissingCopyNameMenuItem"
                                        Command="{Binding ElementName=RootControlElement, Path=ViewModel.CopyScanMissingCommand, Mode=OneWay}"
                                        CommandParameter="{x:Bind}" />
                                    <MenuFlyoutSeparator />
                                    <MenuFlyoutItem x:Uid="DatabaseFileScan_MissingCopyAllNamesMenuItem" Command="{Binding ElementName=RootControlElement, Path=ViewModel.CopyAllScanMissingCommand, Mode=OneWay}" />
                                </MenuFlyoutSubItem>
                            </MenuFlyout>
                        </Grid.ContextFlyout>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ListView
            Grid.Row="2"
            Margin="{StaticResource SmallTopMargin}"
            Padding="8"
            BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{ThemeResource ControlCornerRadius}"
            ItemsSource="{x:Bind ViewModel.ScanSortedUnusedFiles, Mode=OneWay}"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.HorizontalScrollMode="Auto"
            Visibility="{Binding ElementName=ScanResultSelectorBar, Path=SelectedItem.Name, Mode=OneWay, Converter={StaticResource EqualsToVisibilityConverter}, ConverterParameter=ScanPage_SelectorBarItemUnused}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="lclviewmodels:DatabaseScanResultActualViewModel">
                    <Grid>
                        <TextBlock Margin="{StaticResource XSmallTopBottomMargin}" Text="{x:Bind ActualDisplayName}" />
                        <Grid.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem
                                    x:Uid="DatabaseFileScan_UnusedOpenInExplorerMenuItem"
                                    Command="{Binding ElementName=RootControlElement, Path=ViewModel.OpenScanActualInExplorerCommand, Mode=OneWay}"
                                    CommandParameter="{x:Bind}" />
                                <MenuFlyoutSubItem x:Uid="DatabaseFileScan_UnusedCopyToClipboardMenuItem">
                                    <MenuFlyoutItem
                                        x:Uid="DatabaseFileScan_UnusedCopyNameMenuItem"
                                        Command="{Binding ElementName=RootControlElement, Path=ViewModel.CopyScanUnusedCommand, Mode=OneWay}"
                                        CommandParameter="{x:Bind}" />
                                    <MenuFlyoutSeparator />
                                    <MenuFlyoutItem x:Uid="DatabaseFileScan_UnusedCopyAllNamesMenuItem" Command="{Binding ElementName=RootControlElement, Path=ViewModel.CopyAllScanUnusedCommand, Mode=OneWay}" />
                                </MenuFlyoutSubItem>
                            </MenuFlyout>
                        </Grid.ContextFlyout>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ListView
            x:Name="IncorrectNameListView"
            Grid.Row="2"
            Margin="{StaticResource SmallTopMargin}"
            Padding="8"
            BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{ThemeResource ControlCornerRadius}"
            ItemsSource="{x:Bind ViewModel.ScanSortedIncorrectNameFiles, Mode=OneWay}"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.HorizontalScrollMode="Auto"
            Visibility="{Binding ElementName=ScanResultSelectorBar, Path=SelectedItem.Name, Mode=OneWay, Converter={StaticResource EqualsToVisibilityConverter}, ConverterParameter=ScanPage_SelectorBarItemIncorrectName}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="lclviewmodels:DatabaseScanResultWrongNameViewModel">
                    <Grid
                        Margin="{StaticResource XSmallTopBottomMargin}"
                        ColumnSpacing="8"
                        RowSpacing="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            x:Uid="DatabaseFileScan_IncorrectNameActual"
                            Grid.Row="0"
                            Grid.Column="0"
                            FontWeight="Bold" />
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="1"
                            Text="{x:Bind ActualDisplayName}" />
                        <TextBlock
                            x:Uid="DatabaseFileScan_IncorrectNameExpected"
                            Grid.Row="1"
                            Grid.Column="0"
                            FontWeight="Bold" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            Text="{x:Bind ExpectedDisplayName}" />
                        <Grid.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem
                                    x:Uid="DatabaseFileScan_IncorrectNameOpenInExplorerMenuItem"
                                    Command="{Binding ElementName=RootControlElement, Path=ViewModel.OpenScanWrongNamedInExplorerCommand, Mode=OneWay}"
                                    CommandParameter="{x:Bind}" />
                                <MenuFlyoutSubItem x:Uid="DatabaseFileScan_IncorrectNameCopyToClipboardMenuItem">
                                    <MenuFlyoutItem
                                        x:Uid="DatabaseFileScan_IncorrectNameCopyActualNameMenuItem"
                                        Command="{Binding ElementName=RootControlElement, Path=ViewModel.CopyScanWrongNamedActualCommand, Mode=OneWay}"
                                        CommandParameter="{x:Bind}" />
                                    <MenuFlyoutItem
                                        x:Uid="DatabaseFileScan_IncorrectNameCopyExpectedNameMenuItem"
                                        Command="{Binding ElementName=RootControlElement, Path=ViewModel.CopyScanWrongNamedExpectedCommand, Mode=OneWay}"
                                        CommandParameter="{x:Bind}" />
                                    <MenuFlyoutSeparator />
                                    <MenuFlyoutItem x:Uid="DatabaseFileScan_IncorrectNameCopyAllNamesMenuItem" Command="{Binding ElementName=RootControlElement, Path=ViewModel.CopyAllScanWrongNamedCommand, Mode=OneWay}" />
                                    <MenuFlyoutItem x:Uid="DatabaseFileScan_IncorrectNameCopyAllActualNamesMenuItem" Command="{Binding ElementName=RootControlElement, Path=ViewModel.CopyAllScanWrongNamedActualCommand, Mode=OneWay}" />
                                    <MenuFlyoutItem x:Uid="DatabaseFileScan_IncorrectNameCopyAllExpectedNamesMenuItem" Command="{Binding ElementName=RootControlElement, Path=ViewModel.CopyAllScanWrongNamedExpectedCommand, Mode=OneWay}" />
                                </MenuFlyoutSubItem>
                            </MenuFlyout>
                        </Grid.ContextFlyout>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>

</UserControl>
