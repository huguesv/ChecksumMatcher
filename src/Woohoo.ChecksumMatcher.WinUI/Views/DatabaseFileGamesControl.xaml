<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Woohoo.ChecksumMatcher.WinUI.Views.DatabaseFileGamesControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ct="using:CommunityToolkit.WinUI"
    xmlns:ctcontrols="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lclviewmodels="using:Woohoo.ChecksumMatcher.WinUI.ViewModels"
    xmlns:lclviews="using:Woohoo.ChecksumMatcher.WinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <lclviewmodels:DatabaseGameStatus x:Key="GameStatusComplete">Complete</lclviewmodels:DatabaseGameStatus>
        <lclviewmodels:DatabaseGameStatus x:Key="GameStatusMissing">Missing</lclviewmodels:DatabaseGameStatus>

        <DataTemplate x:Key="GameListViewTemplate" x:DataType="lclviewmodels:DatabaseGameViewModel">
            <Grid Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem
                            x:Uid="DatabaseFileGames_GameCopyNameMenuItem"
                            Command="{x:Bind CopyToClipboardCommand, Mode=OneWay}"
                            CommandParameter="{x:Bind Name, Mode=OneWay}"
                            Icon="{ct:FontIcon Glyph=&#xE8C8;}" />
                    </MenuFlyout>
                </Grid.ContextFlyout>

                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                    Text="&#xE8B7;" />

                <TextBlock
                    Grid.Column="1"
                    Margin="{StaticResource SmallLeftMargin}"
                    VerticalAlignment="Center"
                    Text="{x:Bind Name, Mode=OneWay}" />

                <StackPanel
                    Grid.Column="2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Border
                        Margin="{StaticResource SmallLeftMargin}"
                        VerticalAlignment="Center"
                        Background="{ThemeResource SystemFillColorSuccessBrush}"
                        CornerRadius="{ThemeResource ControlCornerRadius}"
                        Visibility="{x:Bind Status, Mode=OneWay, Converter={StaticResource GameStatusToVisibilityConverter}, ConverterParameter=Complete}">
                        <TextBlock
                            Margin="2"
                            Foreground="{ThemeResource InfoBadgeForeground}"
                            Style="{ThemeResource CaptionTextBlockStyle}"
                            Text="{x:Bind Status, Mode=OneWay, Converter={StaticResource GameStatusToTextConverter}}" />
                    </Border>
                    <Border
                        Margin="{StaticResource SmallLeftMargin}"
                        VerticalAlignment="Center"
                        Background="{ThemeResource SystemFillColorCriticalBrush}"
                        CornerRadius="{ThemeResource ControlCornerRadius}"
                        Visibility="{x:Bind Status, Mode=OneWay, Converter={StaticResource GameStatusToVisibilityConverter}, ConverterParameter=Missing|Partial}">
                        <TextBlock
                            Margin="2"
                            Foreground="{ThemeResource InfoBadgeForeground}"
                            Style="{ThemeResource CaptionTextBlockStyle}"
                            Text="{x:Bind Status, Mode=OneWay, Converter={StaticResource GameStatusToTextConverter}}" />
                    </Border>
                    <Border
                        Margin="{StaticResource SmallLeftMargin}"
                        VerticalAlignment="Center"
                        Background="{ThemeResource SystemFillColorCautionBrush}"
                        CornerRadius="{ThemeResource ControlCornerRadius}"
                        Visibility="{x:Bind Status, Mode=OneWay, Converter={StaticResource GameStatusToVisibilityConverter}, ConverterParameter=CompleteIncorrectName|PartialIncorrectName}">
                        <TextBlock
                            Margin="2"
                            Foreground="{ThemeResource InfoBadgeForeground}"
                            Style="{ThemeResource CaptionTextBlockStyle}"
                            Text="{x:Bind Status, Mode=OneWay, Converter={StaticResource GameStatusToTextConverter}}" />
                    </Border>
                </StackPanel>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="RomListViewTemplate" x:DataType="lclviewmodels:DatabaseRomViewModel">
            <Grid Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem
                            x:Uid="DatabaseFileGames_RomCopyNameMenuItem"
                            Command="{x:Bind CopyToClipboardCommand, Mode=OneWay}"
                            CommandParameter="{x:Bind Name, Mode=OneWay}"
                            Icon="{ct:FontIcon Glyph=&#xE8C8;}" />
                        <MenuFlyoutItem
                            x:Uid="DatabaseFileGames_RomCopySizeMenuItem"
                            Command="{x:Bind CopyToClipboardCommand, Mode=OneWay}"
                            CommandParameter="{x:Bind Size, Mode=OneWay}"
                            Icon="{ct:FontIcon Glyph=&#xE8C8;}" />
                        <MenuFlyoutItem
                            x:Uid="DatabaseFileGames_RomCopyCrc32MenuItem"
                            Command="{x:Bind CopyToClipboardCommand, Mode=OneWay}"
                            CommandParameter="{x:Bind CRC32, Mode=OneWay}"
                            Icon="{ct:FontIcon Glyph=&#xE8C8;}" />
                        <MenuFlyoutItem
                            x:Uid="DatabaseFileGames_RomCopyMd5MenuItem"
                            Command="{x:Bind CopyToClipboardCommand, Mode=OneWay}"
                            CommandParameter="{x:Bind MD5, Mode=OneWay}"
                            Icon="{ct:FontIcon Glyph=&#xE8C8;}" />
                        <MenuFlyoutItem
                            x:Uid="DatabaseFileGames_RomCopySha1MenuItem"
                            Command="{x:Bind CopyToClipboardCommand, Mode=OneWay}"
                            CommandParameter="{x:Bind SHA1, Mode=OneWay}"
                            Icon="{ct:FontIcon Glyph=&#xE8C8;}" />
                        <MenuFlyoutItem
                            x:Uid="DatabaseFileGames_RomCopySha256MenuItem"
                            Command="{x:Bind CopyToClipboardCommand, Mode=OneWay}"
                            CommandParameter="{x:Bind SHA256, Mode=OneWay}"
                            Icon="{ct:FontIcon Glyph=&#xE8C8;}" />
                    </MenuFlyout>
                </Grid.ContextFlyout>

                <TextBlock
                    Margin="{StaticResource SmallRightMargin}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                    Text="&#xE8A5;" />

                <Grid
                    Grid.Column="1"
                    Margin="{StaticResource SmallTopBottomMargin}"
                    ColumnSpacing="12"
                    RowSpacing="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        x:Uid="DatabaseFileGames_RomName"
                        Grid.Row="0"
                        Grid.Column="0"
                        VerticalAlignment="Center" />
                    <TextBlock
                        x:Uid="DatabaseFileGames_RomSize"
                        Grid.Row="1"
                        Grid.Column="0"
                        VerticalAlignment="Center" />
                    <TextBlock
                        x:Uid="DatabaseFileGames_RomCrc32"
                        Grid.Row="2"
                        Grid.Column="0"
                        VerticalAlignment="Center" />
                    <TextBlock
                        x:Uid="DatabaseFileGames_RomMd5"
                        Grid.Row="3"
                        Grid.Column="0"
                        VerticalAlignment="Center" />
                    <TextBlock
                        x:Uid="DatabaseFileGames_RomSha1"
                        Grid.Row="4"
                        Grid.Column="0"
                        VerticalAlignment="Center" />
                    <TextBlock
                        x:Uid="DatabaseFileGames_RomSha256"
                        Grid.Row="5"
                        Grid.Column="0"
                        VerticalAlignment="Center" />

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Text="{x:Bind Name, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Text="{x:Bind Size, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Text="{x:Bind CRC32, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Text="{x:Bind MD5, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Text="{x:Bind SHA1, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Text="{x:Bind SHA256, Mode=OneWay}" />
                </Grid>

                <StackPanel
                    Grid.Column="2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Border
                        Margin="{StaticResource SmallLeftMargin}"
                        VerticalAlignment="Center"
                        Background="{ThemeResource SystemFillColorSuccessBrush}"
                        CornerRadius="{ThemeResource ControlCornerRadius}"
                        Visibility="{x:Bind Status, Mode=OneWay, Converter={StaticResource RomStatusToVisibilityConverter}, ConverterParameter=Found}">
                        <TextBlock
                            Margin="2"
                            Foreground="{ThemeResource InfoBadgeForeground}"
                            Style="{ThemeResource CaptionTextBlockStyle}"
                            Text="{x:Bind Status, Mode=OneWay, Converter={StaticResource RomStatusToTextConverter}}" />
                    </Border>
                    <Border
                        Margin="{StaticResource SmallLeftMargin}"
                        VerticalAlignment="Center"
                        Background="{ThemeResource SystemFillColorCautionBrush}"
                        CornerRadius="{ThemeResource ControlCornerRadius}"
                        Visibility="{x:Bind Status, Mode=OneWay, Converter={StaticResource RomStatusToVisibilityConverter}, ConverterParameter=FoundWrongName}">
                        <TextBlock
                            Margin="2"
                            Foreground="{ThemeResource InfoBadgeForeground}"
                            Style="{ThemeResource CaptionTextBlockStyle}"
                            Text="{x:Bind Status, Mode=OneWay, Converter={StaticResource RomStatusToTextConverter}}" />
                    </Border>
                    <Border
                        Margin="{StaticResource SmallLeftMargin}"
                        VerticalAlignment="Center"
                        Background="{ThemeResource SystemFillColorCriticalBrush}"
                        CornerRadius="{ThemeResource ControlCornerRadius}"
                        Visibility="{x:Bind Status, Mode=OneWay, Converter={StaticResource RomStatusToVisibilityConverter}, ConverterParameter=NotFound}">
                        <TextBlock
                            Margin="2"
                            Foreground="{ThemeResource InfoBadgeForeground}"
                            Style="{ThemeResource CaptionTextBlockStyle}"
                            Text="{x:Bind Status, Mode=OneWay, Converter={StaticResource RomStatusToTextConverter}}" />
                    </Border>
                </StackPanel>

                <TextBlock
                    Grid.Column="3"
                    MinWidth="70"
                    Margin="8,4"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    HorizontalTextAlignment="Right"
                    Text="{x:Bind Size, Converter={StaticResource FileSizeConverter}, Mode=OneWay}" />
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <Grid Margin="0,12,0,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <DropDownButton
                x:Uid="DatabaseFileGames_ScanStatusFilterButton"
                Grid.Column="0"
                MinWidth="160"
                Margin="{StaticResource SmallRightMargin}"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Left"
                AutomationProperties.Name="{x:Bind ViewModel.FilterDescription, Mode=OneWay}">
                <DropDownButton.Content>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource SymbolThemeFontFamily}"
                            Text="&#xE71C;" />
                        <TextBlock
                            Margin="{StaticResource SmallLeftMargin}"
                            VerticalAlignment="Center"
                            Text="{x:Bind ViewModel.FilterDescription, Mode=OneWay}" />
                    </StackPanel>
                </DropDownButton.Content>
                <DropDownButton.Flyout>
                    <MenuFlyout Placement="Bottom">
                        <MenuFlyoutItem
                            x:Uid="DatabaseFileGames_ScanStatusFilterAllMenuItem"
                            Command="{x:Bind ViewModel.FilterAllCommand, Mode=OneWay}"
                            Icon="{ct:FontIcon Glyph=&#xE8A9;}" />
                        <MenuFlyoutItem
                            x:Uid="DatabaseFileGames_ScanStatusFilterCompleteMenuItem"
                            Command="{x:Bind ViewModel.FilterCompleteCommand, Mode=OneWay}"
                            Icon="{ct:FontIcon Glyph=&#xE930;}" />
                        <MenuFlyoutItem
                            x:Uid="DatabaseFileGames_ScanStatusFilterPartialMenuItem"
                            Command="{x:Bind ViewModel.FilterPartialCommand, Mode=OneWay}"
                            Icon="{ct:FontIcon Glyph=&#xE814;}" />
                        <MenuFlyoutItem
                            x:Uid="DatabaseFileGames_ScanStatusFilterMissingMenuItem"
                            Command="{x:Bind ViewModel.FilterMissingCommand, Mode=OneWay}"
                            Icon="{ct:FontIcon Glyph=&#xEA39;}" />
                        <MenuFlyoutItem
                            x:Uid="DatabaseFileGames_ScanStatusFilterIncorrectNameMenuItem"
                            Command="{x:Bind ViewModel.FilterWrongNameCommand, Mode=OneWay}"
                            Icon="{ct:FontIcon Glyph=&#xE8AC;}" />
                    </MenuFlyout>
                </DropDownButton.Flyout>
            </DropDownButton>
            <DropDownButton
                x:Uid="DatabaseFileGames_DumpStatusFilterButton"
                Grid.Column="1"
                MinWidth="160"
                Margin="{StaticResource SmallRightMargin}"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Left"
                AutomationProperties.Name="{x:Bind ViewModel.RomFilterDescription, Mode=OneWay}">
                <DropDownButton.Content>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource SymbolThemeFontFamily}"
                            Text="&#xE71C;" />
                        <TextBlock
                            Margin="{StaticResource SmallLeftMargin}"
                            VerticalAlignment="Center"
                            Text="{x:Bind ViewModel.RomFilterDescription, Mode=OneWay}" />
                    </StackPanel>
                </DropDownButton.Content>
                <DropDownButton.Flyout>
                    <MenuFlyout Placement="Bottom">
                        <MenuFlyoutItem
                            x:Uid="DatabaseFileGames_DumpStatusFilterAllMenuItem"
                            Command="{x:Bind ViewModel.FilterRomStatusCommand, Mode=OneWay}"
                            CommandParameter="all"
                            Icon="{ct:FontIcon Glyph=&#xE8A9;}" />
                        <MenuFlyoutItem
                            x:Uid="DatabaseFileGames_DumpStatusFilterBadMenuItem"
                            Command="{x:Bind ViewModel.FilterRomStatusCommand, Mode=OneWay}"
                            CommandParameter="bad"
                            Icon="{ct:FontIcon Glyph=&#xE783;}" />
                        <MenuFlyoutItem
                            x:Uid="DatabaseFileGames_DumpStatusFilterGoodMenuItem"
                            Command="{x:Bind ViewModel.FilterRomStatusCommand, Mode=OneWay}"
                            CommandParameter="good"
                            Icon="{ct:FontIcon Glyph=&#xE930;}" />
                        <MenuFlyoutItem
                            x:Uid="DatabaseFileGames_DumpStatusFilterNoDumpMenuItem"
                            Command="{x:Bind ViewModel.FilterRomStatusCommand, Mode=OneWay}"
                            CommandParameter="nodump"
                            Icon="{ct:FontIcon Glyph=&#xF140;}" />
                        <MenuFlyoutItem
                            x:Uid="DatabaseFileGames_DumpStatusFilterVerifiedMenuItem"
                            Command="{x:Bind ViewModel.FilterRomStatusCommand, Mode=OneWay}"
                            CommandParameter="verified"
                            Icon="{ct:FontIcon Glyph=&#xF0FB;}" />
                    </MenuFlyout>
                </DropDownButton.Flyout>
            </DropDownButton>
            <TextBlock
                x:Uid="DatabaseFileGames_Query"
                Grid.Column="2"
                Margin="{StaticResource SmallLeftMargin}"
                VerticalAlignment="Center" />
            <TextBox
                x:Uid="DatabaseFileGames_FilterTextBox"
                Grid.Column="3"
                Margin="{StaticResource SmallLeftMargin}"
                VerticalAlignment="Center"
                Text="{x:Bind ViewModel.FilterText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Grid.Column="4"
                MinWidth="90"
                Margin="{StaticResource SmallLeftMargin}"
                VerticalAlignment="Center"
                HorizontalTextAlignment="Right">
                <Run Text="{x:Bind ViewModel.FilteredGames.Count, Mode=OneWay}" />
                <Run x:Uid="DatabaseFileGames_FilterOfSeparator" />
                <Run Text="{x:Bind ViewModel.Games.Count, Mode=OneWay}" />
            </TextBlock>
        </Grid>

        <ListView
            Grid.Row="1"
            Margin="{StaticResource SmallTopMargin}"
            Padding="8"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{ThemeResource ControlCornerRadius}"
            ItemTemplate="{StaticResource GameListViewTemplate}"
            ItemsSource="{x:Bind ViewModel.FilteredGames, Mode=OneWay}"
            SelectedItem="{x:Bind ViewModel.SelectedGame, Mode=TwoWay}"
            SelectionMode="Single"
            ShowsScrollingPlaceholders="True" />

        <ctcontrols:GridSplitter Grid.Row="2" Margin="{StaticResource XSmallTopBottomMargin}" />

        <ListView
            Grid.Row="3"
            Padding="8"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{ThemeResource ControlCornerRadius}"
            ItemTemplate="{StaticResource RomListViewTemplate}"
            ItemsSource="{x:Bind ViewModel.SelectedGame.Roms, Mode=OneWay}"
            SelectedItem="{x:Bind ViewModel.SelectedGame.SelectedRom, Mode=TwoWay}"
            SelectionMode="Single"
            ShowsScrollingPlaceholders="True" />
    </Grid>
</UserControl>
