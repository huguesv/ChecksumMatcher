                    </MenuFlyout>
                </Grid.ContextFlyout>

                <FontIcon
                    Width="32"
                    Height="32"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Glyph="&#xE8B7;" />

                <TextBlock
                    Grid.Column="1"
                    Margin="{StaticResource XSmallLeftRightMargin}"
