<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Woohoo.ChecksumMatcher.WinUI.Views.DatabaseFolderInfoControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ct="using:CommunityToolkit.WinUI"
    xmlns:ctcontrols="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lclviews="using:Woohoo.ChecksumMatcher.WinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <Grid>
            <StackPanel Margin="0,0,0,20" Spacing="{StaticResource SettingsCardSpacing}">

                <TextBlock x:Uid="DatabaseFolderInfo_DatabaseMetadata" Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" />

                <ctcontrols:SettingsExpander
                    x:Uid="DatabaseFolderInfo_DatabaseStatsExpander"
                    HeaderIcon="{ct:FontIcon Glyph=&#xE946;}"
                    IsExpanded="True">
                    <Button
                        x:Uid="DatabaseFolderInfo_CopyStatsButton"
                        MinWidth="{StaticResource ButtonDefaultMinWidth}"
                        Command="{x:Bind ViewModel.CopyHeaderStatsCommand, Mode=OneWay}" />
                    <ctcontrols:SettingsExpander.Items>
                        <ctcontrols:SettingsCard ContentAlignment="Left">
                            <Grid ColumnSpacing="24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock
                                    x:Uid="DatabaseFolderInfo_StatsDatabaseCount"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Style="{StaticResource SettingsCardInfoName}" />
                                <TextBlock
                                    x:Uid="DatabaseFolderInfo_StatsContainerCount"
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Style="{StaticResource SettingsCardInfoName}" />
                                <TextBlock
                                    x:Uid="DatabaseFolderInfo_StatsTotalFileCount"
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Style="{StaticResource SettingsCardInfoName}" />
                                <TextBlock
                                    x:Uid="DatabaseFolderInfo_StatsTotalSize"
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    Style="{StaticResource SettingsCardInfoName}" />

                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Style="{StaticResource SettingsCardInfoValue}"
                                    Text="{x:Bind ViewModel.Stats.SummaryDatabaseCount, Mode=OneWay}"
                                    Visibility="{x:Bind ViewModel.Stats.IsCalculating, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=true}" />
                                <TextBlock
                                    x:Uid="DatabaseFolderInfo_StatsDatabaseCountCalculating"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Style="{StaticResource SettingsCardInfoValue}"
                                    Text="Calculating..."
                                    Visibility="{x:Bind ViewModel.Stats.IsCalculating, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />

                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Style="{StaticResource SettingsCardInfoValue}"
                                    Text="{x:Bind ViewModel.Stats.SummaryContainerCount, Mode=OneWay}"
                                    Visibility="{x:Bind ViewModel.Stats.IsCalculating, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=true}" />
                                <TextBlock
                                    x:Uid="DatabaseFolderInfo_StatsContainerCountCalculating"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Style="{StaticResource SettingsCardInfoValue}"
                                    Text="Calculating..."
                                    Visibility="{x:Bind ViewModel.Stats.IsCalculating, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />

                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Style="{StaticResource SettingsCardInfoValue}"
                                    Text="{x:Bind ViewModel.Stats.SummaryFileCount, Mode=OneWay}"
                                    Visibility="{x:Bind ViewModel.Stats.IsCalculating, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=true}" />
                                <TextBlock
                                    x:Uid="DatabaseFolderInfo_StatsTotalFileCountCalculating"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Style="{StaticResource SettingsCardInfoValue}"
                                    Text="Calculating..."
                                    Visibility="{x:Bind ViewModel.Stats.IsCalculating, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />

                                <TextBlock
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Style="{StaticResource SettingsCardInfoValue}"
                                    Text="{x:Bind ViewModel.Stats.SummarySize, Converter={StaticResource FileSizeConverter}, Mode=OneWay}"
                                    Visibility="{x:Bind ViewModel.Stats.IsCalculating, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=true}" />
                                <TextBlock
                                    x:Uid="DatabaseFolderInfo_StatsTotalSizeCalculating"
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Style="{StaticResource SettingsCardInfoValue}"
                                    Text="Calculating..."
                                    Visibility="{x:Bind ViewModel.Stats.IsCalculating, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                            </Grid>
                        </ctcontrols:SettingsCard>
                    </ctcontrols:SettingsExpander.Items>
                </ctcontrols:SettingsExpander>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
