<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Woohoo.ChecksumMatcher.WinUI.Views.DatabaseFolderDetailControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ct="using:CommunityToolkit.WinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lclviewmodels="using:Woohoo.ChecksumMatcher.WinUI.ViewModels"
    xmlns:lclviews="using:Woohoo.ChecksumMatcher.WinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <SelectorBar x:Name="SelectorBar1">
            <SelectorBarItem
                x:Name="SelectorBarItemInfo"
                x:Uid="DatabaseFolderDetails_SelectorBarItemInfo"
                Icon="{ct:FontIcon Glyph=&#xE946;}" />
            <SelectorBarItem
                x:Name="SelectorBarItemScan"
                x:Uid="DatabaseFolderDetails_SelectorBarItemScan"
                Icon="{ct:FontIcon Glyph=&#xEE6F;}"
                IsSelected="True" />
            <SelectorBarItem
                x:Name="SelectorBarItemScanSettings"
                x:Uid="DatabaseFolderDetails_SelectorBarItemScanSettings"
                Icon="{ct:FontIcon Glyph=&#xE8F7;}" />
        </SelectorBar>
        <lclviews:DatabaseFolderInfoControl
            Grid.Row="1"
            ViewModel="{x:Bind DatabaseFolder, Mode=OneWay}"
            Visibility="{Binding ElementName=SelectorBar1, Path=SelectedItem.Name, Mode=OneWay, Converter={StaticResource EqualsToVisibilityConverter}, ConverterParameter=SelectorBarItemInfo}" />
        <lclviews:DatabaseFolderScanControl
            Grid.Row="1"
            ViewModel="{x:Bind DatabaseFolder, Mode=OneWay}"
            Visibility="{Binding ElementName=SelectorBar1, Path=SelectedItem.Name, Mode=OneWay, Converter={StaticResource EqualsToVisibilityConverter}, ConverterParameter=SelectorBarItemScan}" />
        <lclviews:DatabaseFolderScanSettingsControl
            Grid.Row="1"
            ViewModel="{x:Bind DatabaseFolder, Mode=OneWay}"
            Visibility="{Binding ElementName=SelectorBar1, Path=SelectedItem.Name, Mode=OneWay, Converter={StaticResource EqualsToVisibilityConverter}, ConverterParameter=SelectorBarItemScanSettings}" />
    </Grid>
</UserControl>
