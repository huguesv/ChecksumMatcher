<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Woohoo.ChecksumMatcher.WinUI.Views.DatabaseFolderDetailControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:viewmodels="using:Woohoo.ChecksumMatcher.WinUI.ViewModels"
    xmlns:views="using:Woohoo.ChecksumMatcher.WinUI.Views"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <SelectorBar
            x:Name="SelectorBar1"
            Grid.Row="0"
            SelectionChanged="SelectorBar1_SelectionChanged">
            <SelectorBarItem
                x:Name="SelectorBarItemInfo"
                Icon="{ui:FontIcon Glyph=&#xE946;}"
                IsSelected="True"
                Text="Info" />
            <SelectorBarItem
                x:Name="SelectorBarItemScan"
                Icon="{ui:FontIcon Glyph=&#xEE6F;}"
                Text="Scan" />
            <SelectorBarItem
                x:Name="SelectorBarItemRebuild"
                Icon="{ui:FontIcon Glyph=&#xEE6F;}"
                Text="Rebuild" />
        </SelectorBar>
    </Grid>
</UserControl>
