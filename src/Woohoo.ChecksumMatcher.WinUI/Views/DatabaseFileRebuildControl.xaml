<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Woohoo.ChecksumMatcher.WinUI.Views.DatabaseFileRebuildControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ct="using:CommunityToolkit.WinUI"
    xmlns:ctcontrols="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lclviewmodels="using:Woohoo.ChecksumMatcher.WinUI.ViewModels"
    xmlns:lclviews="using:Woohoo.ChecksumMatcher.WinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="RootControlElement"
    mc:Ignorable="d">

    <Grid Margin="0,12,0,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                    x:Uid="DatabaseFileRebuild_RebuildButton"
                    Grid.Column="0"
                    MinWidth="{StaticResource ButtonDefaultMinWidth}"
                    Background="{ThemeResource AccentFillColorDefaultBrush}"
                    Command="{x:Bind ViewModel.RebuildCommand, Mode=OneWay}"
                    Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}" />
                <Button
                    x:Uid="DatabaseFileRebuild_CancelButton"
                    Grid.Column="1"
                    MinWidth="{StaticResource ButtonDefaultMinWidth}"
                    Margin="{StaticResource SmallLeftMargin}"
                    Command="{x:Bind ViewModel.CancelRebuildCommand, Mode=OneWay}" />
                <Button
                    x:Uid="DatabaseFileRebuild_ClearResultsButton"
                    Grid.Column="2"
                    MinWidth="{StaticResource ButtonDefaultMinWidth}"
                    Margin="{StaticResource SmallLeftMargin}"
                    Command="{x:Bind ViewModel.ClearRebuildResultsCommand, Mode=OneWay}" />
            </Grid>

            <TextBlock x:Uid="DatabaseFileRebuild_Status" Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" />
            <Border
                MinHeight="60"
                Margin="{StaticResource SmallTopMargin}"
                Padding="8,4"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{ThemeResource ControlCornerRadius}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        VerticalAlignment="Top"
                        AutomationProperties.LiveSetting="Assertive"
                        Foreground="{x:Bind ViewModel.RebuildStatus.Severity, Mode=OneWay, Converter={StaticResource StatusSeverityToBrushConverter}}"
                        Text="{x:Bind ViewModel.RebuildStatus.Text, Mode=OneWay}"
                        TextWrapping="Wrap"
                        Visibility="{x:Bind ViewModel.RebuildStatus.Severity, Mode=OneWay, Converter={StaticResource StatusSeverityToVisibilityConverter}}" />
                    <ProgressBar
                        Grid.Row="1"
                        Margin="{StaticResource XSmallTopMargin}"
                        HorizontalAlignment="Stretch"
                        IsIndeterminate="True"
                        Visibility="{x:Bind ViewModel.IsRebuilding, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                </Grid>
            </Border>
        </StackPanel>

        <SelectorBar
            x:Name="RebuildResultSelectorBar"
            Grid.Row="1"
            Margin="{StaticResource SmallTopBottomMargin}">
            <SelectorBarItem
                x:Name="DatabaseFileRebuild_SelectorBarItemMatched"
                x:Uid="DatabaseFileRebuild_SelectorBarItemMatched"
                Icon="{ct:FontIcon Glyph=&#xE930;}"
                IsSelected="True"
                Text="{x:Bind ViewModel.RebuildMatchedFilesLabel, Mode=OneWay}" />
            <SelectorBarItem
                x:Name="DatabaseFileRebuild_SelectorBarItemUnused"
                x:Uid="DatabaseFileRebuild_SelectorBarItemUnused"
                Icon="{ct:FontIcon Glyph=&#xE9CE;}"
                Text="{x:Bind ViewModel.RebuildUnusedFilesLabel, Mode=OneWay}" />
        </SelectorBar>

        <ListView
            Grid.Row="2"
            Margin="{StaticResource SmallTopMargin}"
            Padding="8"
            BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{ThemeResource ControlCornerRadius}"
            ItemsSource="{x:Bind ViewModel.RebuildSortedMatchedFiles, Mode=OneWay}"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.HorizontalScrollMode="Auto"
            Visibility="{Binding ElementName=RebuildResultSelectorBar, Path=SelectedItem.Name, Mode=OneWay, Converter={StaticResource EqualsToVisibilityConverter}, ConverterParameter=DatabaseFileRebuild_SelectorBarItemMatched}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="x:String">
                    <Grid>
                        <TextBlock Margin="{StaticResource XSmallTopBottomMargin}" Text="{x:Bind}" />
                        <Grid.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutSubItem x:Uid="DatabaseFileRebuild_MatchedCopyToClipboardMenuItem">
                                    <MenuFlyoutItem
                                        x:Uid="DatabaseFileRebuild_MatchedCopyNameMenuItem"
                                        Command="{Binding ElementName=RootControlElement, Path=ViewModel.CopyRebuildMatchedCommand, Mode=OneWay}"
                                        CommandParameter="{x:Bind}" />
                                    <MenuFlyoutSeparator />
                                    <MenuFlyoutItem
                                        x:Uid="DatabaseFileRebuild_MatchedCopyAllNamesMenuItem"
                                        Command="{Binding ElementName=RootControlElement, Path=ViewModel.CopyAllRebuildMatchedCommand, Mode=OneWay}"
                                        Icon="{ct:FontIcon Glyph=&#xE8C8;}" />
                                </MenuFlyoutSubItem>
                            </MenuFlyout>
                        </Grid.ContextFlyout>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ListView
            Grid.Row="2"
            Margin="{StaticResource SmallTopMargin}"
            Padding="8"
            BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{ThemeResource ControlCornerRadius}"
            ItemsSource="{x:Bind ViewModel.RebuildSortedUnusedFiles, Mode=OneWay}"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.HorizontalScrollMode="Auto"
            Visibility="{Binding ElementName=RebuildResultSelectorBar, Path=SelectedItem.Name, Mode=OneWay, Converter={StaticResource EqualsToVisibilityConverter}, ConverterParameter=DatabaseFileRebuild_SelectorBarItemUnused}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="x:String">
                    <Grid>
                        <TextBlock Margin="{StaticResource XSmallTopBottomMargin}" Text="{x:Bind}" />
                        <Grid.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutSubItem x:Uid="DatabaseFileRebuild_UnusedCopyToClipboardMenuItem">
                                    <MenuFlyoutItem
                                        x:Uid="DatabaseFileRebuild_UnusedCopyNameMenuItem"
                                        Command="{Binding ElementName=RootControlElement, Path=ViewModel.CopyRebuildUnusedCommand, Mode=OneWay}"
                                        CommandParameter="{x:Bind}" />
                                    <MenuFlyoutSeparator />
                                    <MenuFlyoutItem
                                        x:Uid="DatabaseFileRebuild_UnusedCopyAllNamesMenuItem"
                                        Command="{Binding ElementName=RootControlElement, Path=ViewModel.CopyAllRebuildUnusedCommand, Mode=OneWay}"
                                        Icon="{ct:FontIcon Glyph=&#xE8C8;}" />
                                </MenuFlyoutSubItem>
                            </MenuFlyout>
                        </Grid.ContextFlyout>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
