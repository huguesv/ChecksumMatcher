<Page
    x:Class="Woohoo.ChecksumMatcher.WinUI.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ct="using:CommunityToolkit.WinUI"
    xmlns:ctcontrols="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lclviewmodels="using:Woohoo.ChecksumMatcher.WinUI.ViewModels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xaml="using:Microsoft.UI.Xaml"
    x:Name="RootPageElement"
    mc:Ignorable="d">

    <ScrollViewer Margin="0,0,-50,0">
        <Grid>

            <StackPanel
                x:Name="ContentArea"
                Margin="0,0,50,20"
                Spacing="{StaticResource SettingsCardSpacing}">

                <TextBlock x:Uid="Settings_Appearance" Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" />

                <ctcontrols:SettingsExpander x:Uid="SettingsPage_ThemeExpander" HeaderIcon="{ct:FontIcon Glyph=&#xE790;}">
                    <ctcontrols:SettingsExpander.Items>
                        <ctcontrols:SettingsCard ContentAlignment="Left">
                            <StackPanel Margin="{StaticResource XSmallTopMargin}">
                                <RadioButton
                                    x:Uid="Settings_Theme_Light"
                                    Command="{x:Bind ViewModel.SwitchThemeCommand, Mode=OneWay}"
                                    GroupName="AppTheme"
                                    IsChecked="{x:Bind ViewModel.ElementTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Light, Mode=OneWay}">
                                    <RadioButton.CommandParameter>
                                        <xaml:ElementTheme>Light</xaml:ElementTheme>
                                    </RadioButton.CommandParameter>
                                </RadioButton>
                                <RadioButton
                                    x:Uid="Settings_Theme_Dark"
                                    Command="{x:Bind ViewModel.SwitchThemeCommand, Mode=OneWay}"
                                    GroupName="AppTheme"
                                    IsChecked="{x:Bind ViewModel.ElementTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Dark, Mode=OneWay}">
                                    <RadioButton.CommandParameter>
                                        <xaml:ElementTheme>Dark</xaml:ElementTheme>
                                    </RadioButton.CommandParameter>
                                </RadioButton>
                                <RadioButton
                                    x:Uid="Settings_Theme_Default"
                                    Command="{x:Bind ViewModel.SwitchThemeCommand, Mode=OneWay}"
                                    GroupName="AppTheme"
                                    IsChecked="{x:Bind ViewModel.ElementTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Default, Mode=OneWay}">
                                    <RadioButton.CommandParameter>
                                        <xaml:ElementTheme>Default</xaml:ElementTheme>
                                    </RadioButton.CommandParameter>
                                </RadioButton>
                            </StackPanel>
                        </ctcontrols:SettingsCard>
                    </ctcontrols:SettingsExpander.Items>
                    <TextBlock Text="{x:Bind ViewModel.ElementTheme, Converter={StaticResource ElementThemeToTextConverter}, Mode=OneWay}" />
                </ctcontrols:SettingsExpander>

                <TextBlock x:Uid="Settings_Notifications" Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" />

                <ctcontrols:SettingsCard x:Uid="SettingsPage_WindowsNotifications" HeaderIcon="{ct:FontIcon Glyph=&#xE91C;}">
                    <StackPanel Margin="{StaticResource XSmallTopMargin}">
                        <ToggleSwitch IsOn="{x:Bind ViewModel.UseWindowsNotifications, Mode=TwoWay}" />
                    </StackPanel>
                </ctcontrols:SettingsCard>

                <ctcontrols:SettingsCard x:Uid="SettingsPage_SystemSounds" HeaderIcon="{ct:FontIcon Glyph=&#xEA8F;}">
                    <StackPanel Margin="{StaticResource XSmallTopMargin}">
                        <ToggleSwitch IsOn="{x:Bind ViewModel.UseSystemSounds, Mode=TwoWay}" />
                    </StackPanel>
                </ctcontrols:SettingsCard>

                <TextBlock x:Uid="Settings_Databases" Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" />

                <ctcontrols:SettingsExpander
                    x:Uid="SettingsPage_DatabaseFolderExpander"
                    HeaderIcon="{ct:FontIcon Glyph=&#xE8F1;}"
                    IsExpanded="True"
                    ItemsSource="{x:Bind ViewModel.DatabaseFolders, Mode=OneWay}">
                    <ctcontrols:SettingsExpander.ItemTemplate>
                        <DataTemplate x:DataType="lclviewmodels:SettingsFolderViewModel">
                            <ctcontrols:SettingsCard
                                Description="{x:Bind Details, Mode=OneWay}"
                                Header="{x:Bind Path, Mode=OneWay}"
                                HeaderIcon="{ct:FontIcon Glyph=&#xE8B7;}">
                                <StackPanel Margin="{StaticResource XSmallTopMargin}" Orientation="Horizontal">
                                    <Button
                                        x:Uid="SettingsPage_DatabaseFolderOptionsButton"
                                        Background="{x:Null}"
                                        BorderBrush="{x:Null}">
                                        <TextBlock FontFamily="{StaticResource SymbolThemeFontFamily}" Text="&#xE712;" />
                                        <Button.Flyout>
                                            <MenuFlyout Placement="BottomEdgeAlignedRight">
                                                <MenuFlyoutItem
                                                    x:Uid="SettingsPage_OpenDatabaseFolderMenuItem"
                                                    Command="{x:Bind OpenInExplorerCommand, Mode=OneWay}"
                                                    CommandParameter="{x:Bind Path}"
                                                    Icon="{ct:FontIcon Glyph=&#xEC50;}" />
                                                <MenuFlyoutItem
                                                    x:Uid="SettingsPage_RemoveDatabaseFolderMenuItem"
                                                    Command="{x:Bind RemoveCommand, Mode=OneWay}"
                                                    CommandParameter="{x:Bind Path}"
                                                    Icon="{ct:FontIcon Glyph=&#xE738;}" />
                                            </MenuFlyout>
                                        </Button.Flyout>
                                    </Button>
                                </StackPanel>
                            </ctcontrols:SettingsCard>
                        </DataTemplate>
                    </ctcontrols:SettingsExpander.ItemTemplate>
                    <StackPanel Margin="{StaticResource XSmallTopMargin}">
                        <Button
                            x:Uid="SettingsPage_AddDatabaseFolderButton"
                            MinWidth="{StaticResource ButtonDefaultMinWidth}"
                            Background="{ThemeResource AccentFillColorDefaultBrush}"
                            Command="{x:Bind ViewModel.AddDatabaseFolderCommand, Mode=OneWay}"
                            Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}" />
                    </StackPanel>
                </ctcontrols:SettingsExpander>

                <ctcontrols:SettingsExpander
                    x:Uid="SettingsPage_CueFolderExpander"
                    HeaderIcon="{ct:FontIcon Glyph=&#xE8D6;}"
                    IsExpanded="True"
                    ItemsSource="{x:Bind ViewModel.CueFolders, Mode=OneWay}">
                    <ctcontrols:SettingsExpander.ItemTemplate>
                        <DataTemplate x:DataType="lclviewmodels:SettingsFolderViewModel">
                            <ctcontrols:SettingsCard
                                Description="{x:Bind Details, Mode=OneWay}"
                                Header="{x:Bind Path, Mode=OneWay}"
                                HeaderIcon="{ct:FontIcon Glyph=&#xE8B7;}">
                                <StackPanel Margin="{StaticResource XSmallTopMargin}" Orientation="Horizontal">
                                    <Button
                                        x:Uid="SettingsPage_CueFolderOptionsButton"
                                        Background="{x:Null}"
                                        BorderBrush="{x:Null}">
                                        <TextBlock FontFamily="{StaticResource SymbolThemeFontFamily}" Text="&#xE712;" />
                                        <Button.Flyout>
                                            <MenuFlyout Placement="BottomEdgeAlignedRight">
                                                <MenuFlyoutItem
                                                    x:Uid="SettingsPage_OpenCueFolderMenuItem"
                                                    Command="{x:Bind OpenInExplorerCommand, Mode=OneWay}"
                                                    CommandParameter="{x:Bind Path}"
                                                    Icon="{ct:FontIcon Glyph=&#xEC50;}" />
                                                <MenuFlyoutItem
                                                    x:Uid="SettingsPage_RemoveCueFolderMenuItem"
                                                    Command="{x:Bind RemoveCommand, Mode=OneWay}"
                                                    CommandParameter="{x:Bind Path}"
                                                    Icon="{ct:FontIcon Glyph=&#xE738;}" />
                                            </MenuFlyout>
                                        </Button.Flyout>
                                    </Button>
                                </StackPanel>
                            </ctcontrols:SettingsCard>
                        </DataTemplate>
                    </ctcontrols:SettingsExpander.ItemTemplate>
                    <StackPanel Margin="{StaticResource XSmallTopMargin}">
                        <Button
                            x:Uid="SettingsPage_AddCueFolderButton"
                            MinWidth="{StaticResource ButtonDefaultMinWidth}"
                            Background="{ThemeResource AccentFillColorDefaultBrush}"
                            Command="{x:Bind ViewModel.AddCueFolderCommand, Mode=OneWay}"
                            Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}" />
                    </StackPanel>
                </ctcontrols:SettingsExpander>

                <TextBlock x:Uid="Settings_Redump" Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" />

                <ctcontrols:SettingsExpander
                    x:Uid="SettingsPage_RedumpLogin"
                    HeaderIcon="{ct:FontIcon Glyph=&#xF32A;}"
                    IsExpanded="False">
                    <ctcontrols:SettingsExpander.Items>
                        <ctcontrols:SettingsCard x:Uid="SettingsPage_RedumpUser" HeaderIcon="{ct:FontIcon Glyph=&#xE77B;}">
                            <StackPanel Margin="{StaticResource XSmallTopMargin}">
                                <TextBox MinWidth="200" Text="{x:Bind ViewModel.RedumpUser, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                        </ctcontrols:SettingsCard>
                        <ctcontrols:SettingsCard x:Uid="SettingsPage_RedumpPassword" HeaderIcon="{ct:FontIcon Glyph=&#xE8D7;}">
                            <StackPanel Margin="{StaticResource XSmallTopMargin}">
                                <PasswordBox MinWidth="200" Password="{x:Bind ViewModel.RedumpPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                        </ctcontrols:SettingsCard>
                        <ctcontrols:SettingsCard x:Uid="SettingsPage_RedumpTestLogin" ContentAlignment="Left">
                            <StackPanel Orientation="Horizontal">
                                <Button
                                    x:Uid="SettingsPage_RedumpCredentialsTestButton"
                                    MinWidth="{StaticResource ButtonDefaultMinWidth}"
                                    VerticalAlignment="Center"
                                    Command="{x:Bind ViewModel.TestRedumpCredentialsCommand, Mode=OneWay}" />
                                <TextBlock
                                    Margin="{StaticResource SmallLeftMargin}"
                                    VerticalAlignment="Center"
                                    AutomationProperties.LiveSetting="Assertive"
                                    Foreground="{x:Bind ViewModel.RedumpCredentialsStatus.Severity, Mode=OneWay, Converter={StaticResource StatusSeverityToBrushConverter}}"
                                    Text="{x:Bind ViewModel.RedumpCredentialsStatus.Text, Mode=OneWay}"
                                    Visibility="{x:Bind ViewModel.RedumpCredentialsStatus.Severity, Mode=OneWay, Converter={StaticResource StatusSeverityToVisibilityConverter}}" />
                            </StackPanel>
                        </ctcontrols:SettingsCard>
                    </ctcontrols:SettingsExpander.Items>
                </ctcontrols:SettingsExpander>

                <ctcontrols:SettingsExpander
                    x:Uid="SettingsPage_RedumpFolder"
                    HeaderIcon="{ct:FontIcon Glyph=&#xE8B7;}"
                    IsExpanded="True">
                    <Button
                        x:Uid="SettingsPage_RedumpFolderSelectButton"
                        MinWidth="{StaticResource ButtonDefaultMinWidth}"
                        Background="{ThemeResource AccentFillColorDefaultBrush}"
                        Command="{x:Bind ViewModel.SelectRedumpFolderCommand, Mode=OneWay}"
                        Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}" />
                    <ctcontrols:SettingsExpander.Items>
                        <ctcontrols:SettingsCard
                            Description="{x:Bind ViewModel.RedumpDownloadFolder.Details, Mode=OneWay}"
                            Header="{x:Bind ViewModel.RedumpDownloadFolder.Path, Mode=OneWay}"
                            HeaderIcon="{ct:FontIcon Glyph=&#xE8B7;}"
                            Visibility="{x:Bind ViewModel.RedumpDownloadFolder.Path, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}">
                            <StackPanel Margin="{StaticResource XSmallTopMargin}" Orientation="Horizontal">
                                <Button
                                    x:Uid="SettingsPage_RedumpFolderOptionsButton"
                                    Background="{x:Null}"
                                    BorderBrush="{x:Null}">
                                    <TextBlock FontFamily="{StaticResource SymbolThemeFontFamily}" Text="&#xE712;" />
                                    <Button.Flyout>
                                        <MenuFlyout Placement="BottomEdgeAlignedRight">
                                            <MenuFlyoutItem
                                                x:Uid="SettingsPage_RedumpFolderOpenMenuItem"
                                                Command="{x:Bind ViewModel.RedumpDownloadFolder.OpenInExplorerCommand, Mode=OneWay}"
                                                CommandParameter="{x:Bind ViewModel.RedumpDownloadFolder.Path, Mode=OneWay}"
                                                Icon="{ct:FontIcon Glyph=&#xEC50;}" />
                                            <MenuFlyoutItem
                                                x:Uid="SettingsPage_RedumpFolderRemoveMenuItem"
                                                Command="{x:Bind ViewModel.RedumpDownloadFolder.RemoveCommand, Mode=OneWay}"
                                                Icon="{ct:FontIcon Glyph=&#xE738;}" />
                                            <MenuFlyoutSeparator />
                                            <MenuFlyoutItem
                                                x:Uid="SettingsPage_RedumpFolderDeleteContentsMenuItem"
                                                Command="{x:Bind ViewModel.DeleteRedumpDownloadFolderContentsCommand, Mode=OneWay}"
                                                Icon="{ct:FontIcon Glyph=&#xE74D;}" />
                                        </MenuFlyout>
                                    </Button.Flyout>
                                </Button>
                            </StackPanel>
                        </ctcontrols:SettingsCard>
                    </ctcontrols:SettingsExpander.Items>
                </ctcontrols:SettingsExpander>

                <ctcontrols:SettingsExpander
                    x:Uid="SettingsPage_RedumpSystems"
                    HeaderIcon="{ct:FontIcon Glyph=&#xE770;}"
                    IsExpanded="False"
                    ItemsSource="{x:Bind ViewModel.RedumpSystems, Mode=OneWay}">
                    <ctcontrols:SettingsExpander.ItemTemplate>
                        <DataTemplate x:DataType="lclviewmodels:SettingsRedumpSystemViewModel">
                            <ctcontrols:SettingsCard Header="{x:Bind Name, Mode=OneWay}" HeaderIcon="{ct:FontIcon Glyph=&#xE770;}">
                                <StackPanel Margin="{StaticResource XSmallTopMargin}">
                                    <ToggleSwitch IsOn="{x:Bind IsEnabled, Mode=TwoWay}" />
                                </StackPanel>
                            </ctcontrols:SettingsCard>
                        </DataTemplate>
                    </ctcontrols:SettingsExpander.ItemTemplate>
                    <StackPanel Margin="{StaticResource XSmallTopMargin}" Orientation="Horizontal">
                        <Button
                            x:Uid="SettingsPage_UnselectAllRedumpSystemsButton"
                            MinWidth="{StaticResource ButtonDefaultMinWidth}"
                            Command="{x:Bind ViewModel.UnselectAllRedumpSystemsCommand, Mode=OneWay}" />
                        <Button
                            x:Uid="SettingsPage_SelectAllRedumpSystemsButton"
                            MinWidth="{StaticResource ButtonDefaultMinWidth}"
                            Margin="{StaticResource XSmallLeftMargin}"
                            Command="{x:Bind ViewModel.SelectAllRedumpSystemsCommand, Mode=OneWay}" />
                    </StackPanel>
                </ctcontrols:SettingsExpander>

                <ctcontrols:SettingsExpander
                    x:Uid="SettingsPage_RedumpDownload"
                    HeaderIcon="{ct:FontIcon Glyph=&#xEBD3;}"
                    IsExpanded="True">
                    <ctcontrols:SettingsExpander.Items>
                        <ctcontrols:SettingsCard ContentAlignment="Left">
                            <StackPanel Orientation="Horizontal">
                                <Button
                                    x:Uid="SettingsPage_RedumpDownloadButton"
                                    MinWidth="{StaticResource ButtonDefaultMinWidth}"
                                    VerticalAlignment="Center"
                                    Background="{ThemeResource AccentFillColorDefaultBrush}"
                                    Command="{x:Bind ViewModel.DownloadRedumpArtifactsCommand, Mode=OneWay}"
                                    Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}" />
                                <Button
                                    x:Uid="SettingsPage_RedumpCancelDownloadButton"
                                    MinWidth="{StaticResource ButtonDefaultMinWidth}"
                                    Margin="{StaticResource SmallLeftMargin}"
                                    VerticalAlignment="Center"
                                    Command="{x:Bind ViewModel.CancelDownloadRedumpArtifactsCommand, Mode=OneWay}" />
                                <TextBlock
                                    Margin="{StaticResource SmallLeftMargin}"
                                    VerticalAlignment="Center"
                                    AutomationProperties.LiveSetting="Assertive"
                                    Foreground="{x:Bind ViewModel.RedumpDownloadStatus.Severity, Mode=OneWay, Converter={StaticResource StatusSeverityToBrushConverter}}"
                                    Text="{x:Bind ViewModel.RedumpDownloadStatus.Text, Mode=OneWay}"
                                    Visibility="{x:Bind ViewModel.RedumpDownloadStatus.Severity, Mode=OneWay, Converter={StaticResource StatusSeverityToVisibilityConverter}}" />
                            </StackPanel>
                        </ctcontrols:SettingsCard>
                    </ctcontrols:SettingsExpander.Items>
                </ctcontrols:SettingsExpander>

                <TextBlock x:Uid="Settings_OfflineStorage" Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" />

                <ctcontrols:SettingsExpander
                    x:Uid="SettingsPage_OfflineFolderExpander"
                    HeaderIcon="{ct:FontIcon Glyph=&#xE8F1;}"
                    IsExpanded="True"
                    ItemsSource="{x:Bind ViewModel.OfflineStorageFolders, Mode=OneWay}">
                    <ctcontrols:SettingsExpander.ItemTemplate>
                        <DataTemplate x:DataType="lclviewmodels:SettingsFolderViewModel">
                            <ctcontrols:SettingsCard
                                Description="{x:Bind Details, Mode=OneWay}"
                                Header="{x:Bind Path, Mode=OneWay}"
                                HeaderIcon="{ct:FontIcon Glyph=&#xE8B7;}">
                                <StackPanel Margin="{StaticResource XSmallTopMargin}" Orientation="Horizontal">
                                    <Button
                                        x:Uid="SettingsPage_OfflineFolderOptionsButton"
                                        Background="{x:Null}"
                                        BorderBrush="{x:Null}">
                                        <TextBlock FontFamily="{StaticResource SymbolThemeFontFamily}" Text="&#xE712;" />
                                        <Button.Flyout>
                                            <MenuFlyout Placement="BottomEdgeAlignedRight">
                                                <MenuFlyoutItem
                                                    x:Uid="SettingsPage_OpenOfflineFolderMenuItem"
                                                    Command="{x:Bind OpenInExplorerCommand, Mode=OneWay}"
                                                    CommandParameter="{x:Bind Path}"
                                                    Icon="{ct:FontIcon Glyph=&#xEC50;}" />
                                                <MenuFlyoutItem
                                                    x:Uid="SettingsPage_RemoveOfflineFolderMenuItem"
                                                    Command="{x:Bind RemoveCommand, Mode=OneWay}"
                                                    CommandParameter="{x:Bind Path}"
                                                    Icon="{ct:FontIcon Glyph=&#xE738;}" />
                                            </MenuFlyout>
                                        </Button.Flyout>
                                    </Button>
                                </StackPanel>
                            </ctcontrols:SettingsCard>
                        </DataTemplate>
                    </ctcontrols:SettingsExpander.ItemTemplate>
                    <StackPanel Margin="{StaticResource XSmallTopMargin}">
                        <Button
                            x:Uid="SettingsPage_AddOfflineFolderButton"
                            MinWidth="{StaticResource ButtonDefaultMinWidth}"
                            Background="{ThemeResource AccentFillColorDefaultBrush}"
                            Command="{x:Bind ViewModel.AddOfflineStorageFolderCommand, Mode=OneWay}"
                            Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}" />
                    </StackPanel>
                </ctcontrols:SettingsExpander>

                <TextBlock x:Uid="Settings_OfflineStorageExplorer" Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" />

                <ctcontrols:SettingsCard x:Uid="SettingsPage_ShowArchivesInTree" HeaderIcon="{ct:FontIcon Glyph=&#xED41;}">
                    <StackPanel Margin="{StaticResource XSmallTopMargin}">
                        <ToggleSwitch IsOn="{x:Bind ViewModel.ExplorerShowArchivesInTree, Mode=TwoWay}" />
                    </StackPanel>
                </ctcontrols:SettingsCard>

                <ctcontrols:SettingsExpander x:Uid="SettingsPage_ExplorerFolderSortPriority" HeaderIcon="{ct:FontIcon Glyph=&#xE8CB;}">
                    <ctcontrols:SettingsExpander.Items>
                        <ctcontrols:SettingsCard ContentAlignment="Left">
                            <StackPanel Margin="{StaticResource XSmallTopMargin}">
                                <RadioButton
                                    x:Uid="Settings_ExplorerFolderSortPriority_First"
                                    Command="{x:Bind ViewModel.SwitchExplorerFolderSortPriorityCommand, Mode=OneWay}"
                                    GroupName="ExplorerFolderSortPriority"
                                    IsChecked="{x:Bind ViewModel.ExplorerFolderSortPriority, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=First, Mode=OneWay}">
                                    <RadioButton.CommandParameter>
                                        <lclviewmodels:OfflineExplorerFolderSortPriority>First</lclviewmodels:OfflineExplorerFolderSortPriority>
                                    </RadioButton.CommandParameter>
                                </RadioButton>
                                <RadioButton
                                    x:Uid="Settings_ExplorerFolderSortPriority_Last"
                                    Command="{x:Bind ViewModel.SwitchExplorerFolderSortPriorityCommand, Mode=OneWay}"
                                    GroupName="ExplorerFolderSortPriority"
                                    IsChecked="{x:Bind ViewModel.ExplorerFolderSortPriority, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Last, Mode=OneWay}">
                                    <RadioButton.CommandParameter>
                                        <lclviewmodels:OfflineExplorerFolderSortPriority>Last</lclviewmodels:OfflineExplorerFolderSortPriority>
                                    </RadioButton.CommandParameter>
                                </RadioButton>
                                <RadioButton
                                    x:Uid="Settings_ExplorerFolderSortPriority_Mixed"
                                    Command="{x:Bind ViewModel.SwitchExplorerFolderSortPriorityCommand, Mode=OneWay}"
                                    GroupName="ExplorerFolderSortPriority"
                                    IsChecked="{x:Bind ViewModel.ExplorerFolderSortPriority, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Mixed, Mode=OneWay}">
                                    <RadioButton.CommandParameter>
                                        <lclviewmodels:OfflineExplorerFolderSortPriority>Mixed</lclviewmodels:OfflineExplorerFolderSortPriority>
                                    </RadioButton.CommandParameter>
                                </RadioButton>
                            </StackPanel>
                        </ctcontrols:SettingsCard>
                    </ctcontrols:SettingsExpander.Items>
                    <TextBlock Text="{x:Bind ViewModel.ExplorerFolderSortPriority, Converter={StaticResource OfflineExplorerFolderSortPriorityToTextConverter}, Mode=OneWay}" />
                </ctcontrols:SettingsExpander>

                <ctcontrols:SettingsExpander x:Uid="SettingsPage_ExplorerArchiveGrouping" HeaderIcon="{ct:FontIcon Glyph=&#xF168;}">
                    <ctcontrols:SettingsExpander.Items>
                        <ctcontrols:SettingsCard ContentAlignment="Left">
                            <StackPanel Margin="{StaticResource XSmallTopMargin}">
                                <RadioButton
                                    x:Uid="Settings_ExplorerArchiveGrouping_WithFiles"
                                    Command="{x:Bind ViewModel.SwitchExplorerArchiveGroupingCommand, Mode=OneWay}"
                                    GroupName="ExplorerArchiveGrouping"
                                    IsChecked="{x:Bind ViewModel.ExplorerArchiveGrouping, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=WithFiles, Mode=OneWay}">
                                    <RadioButton.CommandParameter>
                                        <lclviewmodels:OfflineExplorerArchiveGrouping>WithFiles</lclviewmodels:OfflineExplorerArchiveGrouping>
                                    </RadioButton.CommandParameter>
                                </RadioButton>
                                <RadioButton
                                    x:Uid="Settings_ExplorerArchiveGrouping_WithFolders"
                                    Command="{x:Bind ViewModel.SwitchExplorerArchiveGroupingCommand, Mode=OneWay}"
                                    GroupName="ExplorerArchiveGrouping"
                                    IsChecked="{x:Bind ViewModel.ExplorerArchiveGrouping, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=WithFolders, Mode=OneWay}">
                                    <RadioButton.CommandParameter>
                                        <lclviewmodels:OfflineExplorerArchiveGrouping>WithFolders</lclviewmodels:OfflineExplorerArchiveGrouping>
                                    </RadioButton.CommandParameter>
                                </RadioButton>
                            </StackPanel>
                        </ctcontrols:SettingsCard>
                    </ctcontrols:SettingsExpander.Items>
                    <TextBlock Text="{x:Bind ViewModel.ExplorerArchiveGrouping, Converter={StaticResource OfflineExplorerArchiveGroupingToTextConverter}, Mode=OneWay}" />
                </ctcontrols:SettingsExpander>

                <TextBlock x:Uid="Settings_About" Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" />

                <ctcontrols:SettingsExpander x:Uid="SettingsPage_AboutExpander" HeaderIcon="{ct:FontIcon Glyph=&#xE946;}">

                    <TextBlock Style="{ThemeResource BodyTextBlockStyle}" Text="{x:Bind ViewModel.AboutInfo.AppVersion, Mode=OneWay}" />

                    <ctcontrols:SettingsExpander.Items>
                        <ctcontrols:SettingsCard ContentAlignment="Left">
                            <Grid ColumnSpacing="24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock
                                    x:Uid="SettingsPage_AboutFramework"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Style="{StaticResource SettingsCardInfoName}" />
                                <TextBlock
                                    x:Uid="SettingsPage_AboutProcessArchitecture"
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Style="{StaticResource SettingsCardInfoName}" />
                                <TextBlock
                                    x:Uid="SettingsPage_AboutRuntimeIdentifier"
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Style="{StaticResource SettingsCardInfoName}" />
                                <TextBlock
                                    x:Uid="SettingsPage_AboutOperatingSystem"
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    Style="{StaticResource SettingsCardInfoName}" />
                                <TextBlock
                                    x:Uid="SettingsPage_AboutWindowsRuntime"
                                    Grid.Row="4"
                                    Grid.Column="0"
                                    Style="{StaticResource SettingsCardInfoName}" />
                                <TextBlock
                                    x:Uid="SettingsPage_AboutWindowsSdk"
                                    Grid.Row="5"
                                    Grid.Column="0"
                                    Style="{StaticResource SettingsCardInfoName}" />

                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Style="{StaticResource SettingsCardInfoValue}"
                                    Text="{x:Bind ViewModel.AboutInfo.DotNetFramework, Mode=OneWay}" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Style="{StaticResource SettingsCardInfoValue}"
                                    Text="{x:Bind ViewModel.AboutInfo.ProcessArchitecture, Mode=OneWay}" />
                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Style="{StaticResource SettingsCardInfoValue}"
                                    Text="{x:Bind ViewModel.AboutInfo.RuntimeIdentifier, Mode=OneWay}" />
                                <TextBlock
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Style="{StaticResource SettingsCardInfoValue}"
                                    Text="{x:Bind ViewModel.AboutInfo.OperatingSystem, Mode=OneWay}" />
                                <TextBlock
                                    Grid.Row="4"
                                    Grid.Column="1"
                                    Style="{StaticResource SettingsCardInfoValue}"
                                    Text="{x:Bind ViewModel.AboutInfo.WindowsRuntime, Mode=OneWay}" />
                                <TextBlock
                                    Grid.Row="5"
                                    Grid.Column="1"
                                    Style="{StaticResource SettingsCardInfoValue}"
                                    Text="{x:Bind ViewModel.AboutInfo.WindowsSdk, Mode=OneWay}" />
                            </Grid>
                        </ctcontrols:SettingsCard>
                        <ctcontrols:SettingsCard ContentAlignment="Left">
                            <StackPanel Margin="{StaticResource XSmallTopMargin}">
                                <HyperlinkButton x:Uid="SettingsPage_LicenseTermsLink" Margin="{StaticResource SettingsPageHyperlinkButtonMargin}" />
                                <HyperlinkButton x:Uid="SettingsPage_PrivacyTermsLink" Margin="{StaticResource SettingsPageHyperlinkButtonMargin}" />
                            </StackPanel>
                        </ctcontrols:SettingsCard>
                    </ctcontrols:SettingsExpander.Items>

                </ctcontrols:SettingsExpander>

                <HyperlinkButton x:Uid="SettingsPage_SendFeedback" Margin="0,8,0,0" />

            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
