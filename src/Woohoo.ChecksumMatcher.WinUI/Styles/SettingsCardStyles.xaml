<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctconverters="using:CommunityToolkit.WinUI.Converters"
    xmlns:lclconverters="using:Woohoo.ChecksumMatcher.WinUI.Converters">

    <Style
        x:Key="SettingsSectionHeaderTextBlockStyle"
        BasedOn="{StaticResource BodyStrongTextBlockStyle}"
        TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="Margin" Value="1,30,0,6" />
        </Style.Setters>
    </Style>

    <Style x:Key="SettingsCardInfoName" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Medium" />
    </Style>

    <Style x:Key="SettingsCardInfoValue" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}" />
        <Setter Property="TextWrapping" Value="WrapWholeWords" />
    </Style>

</ResourceDictionary>
